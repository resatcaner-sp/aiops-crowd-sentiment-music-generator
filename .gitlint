[general]
ignore=body-is-missing

contrib=contrib-title-conventional-commits

### Configured rules ###

[title-max-length]
line-length=120

[title-min-length]
min-length=5

[body-max-line-length]
line-length=120

[title-match-regex]
regex=^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)!?(\(\w+\)!?)?: \w+-\d+.*
